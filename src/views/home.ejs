<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    </head>

    <body>
        <div class="container mt-3">
            <% if (typeof(user) != "undefined"){  %>
                <%= user.username %>
                <a href="/add-recipe">Add Recipe</a>
                <a href="/logout">Logout</a> 
            <% } else { %>
                <div class="d-flex flex-column">
                    <a href="/sign-in">Sign In</a>
                    <a href="/sign-up">Sign Up</a>
                </div>
            <% } %>
            
            <% if (typeof(data) != "undefined"){ %>
                <% data.forEach(dt => { %>
                    <div class="mt-3 pb-3">
                        <h2><%= dt.title %></h2>
                        
                        <div class="pt-2 pb-2">
                            <%= dt.ingredients %> 
                        </div>
                        
                        <div class="pt-2 pb-2">
                            <%= dt.steps %>
                        </div>

                        <div class="d-flex flex-row">
                            <div class="p-2"><%= dt.chef.username %></div>
                
                            <% if (typeof(user) != "undefined"){ %>
                                <% if (dt.like.length == 1){ %>
                                    <div class="bg-success p-2" onclick="clicked(`<%= dt._id %>`, `<%= user._id %>`, 'like')">Unlike</div>
                                <% } else { %>
                                    <div class="bg-success p-2" onclick="clicked(`<%= dt._id %>`, `<%= user._id %>`, 'like')">Like</div>
                                <% } %>

                                <% if (dt.dislike.length == 1){ %>
                                    <div class="bg-danger p-2" onclick="clicked(`<%= dt._id %>`, `<%= user._id %>`, 'dislike')">Undislike</div>
                                <% } else { %>
                                    <div class="bg-danger p-2" onclick="clicked(`<%= dt._id %>`, `<%= user._id %>`, 'dislike')">Dislike</div>
                                <% } %>
                            <% } %>
                            <a href="/comment/<%= dt.id %>">
                                <div class="bg-light p-2">Comment</div>
                            </a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </body>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        let clicked = async (recipe_id, user_id, type) => {
            if (user_id != null){
                await socket.emit("clicked", {recipe_id : recipe_id, user_id : user_id, type : type})
                setTimeout(() => location.reload(), 1100)
            }
        }
    </script>
</html>